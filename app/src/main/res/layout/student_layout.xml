<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/light"
    android:padding="20sp"
    android:layout_marginBottom="10sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/student_image_view"
        android:src="@android:drawable/btn_plus"
        android:layout_width="70dp"
        android:layout_height="60dp"/>

    <TextView
        android:layout_marginLeft="20sp"
        android:id="@+id/student_name_text"
        android:layout_toEndOf="@id/student_image_view"
        android:text="Student name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/student_image_view" />


    <TextView
        android:layout_marginLeft="20sp"
        android:id="@+id/student_age_text"
        android:layout_toEndOf="@id/student_image_view"
        android:layout_below="@id/student_name_text"
        android:text="Student age"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/student_image_view" />


    <TextView
        android:layout_marginLeft="20sp"
        android:id="@+id/student_address_text"
        android:layout_toEndOf="@id/student_image_view"
        android:layout_below="@id/student_age_text"
        android:text="Student address"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/student_image_view" />


    <TextView
        android:id="@+id/student_gender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/student_age_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="gender"
        android:textSize="16sp" />



    <ImageButton
        android:id="@+id/delete_student_btn"
        android:src="@android:drawable/ic_delete"
        android:layout_alignParentEnd="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>