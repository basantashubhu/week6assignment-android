<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.WelcomeFragmentOne">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/white"
            android:autoSizeTextType="uniform"
            android:gravity="center_horizontal"
            android:text="Welcome"
            android:layout_width="match_parent"
            android:layout_height="60sp"/>

        <TextView
            android:layout_marginTop="20sp"
            android:text="@string/softwarica_desc"
            android:textSize="16sp"
            android:lineHeight="16sp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="20sp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baseline_school_light_24"
            android:layout_width="80sp"
            android:layout_height="80sp"/>
        
        <TextView
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:text="Softwarica College"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:text="In Collaboration With"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:text="Coventry University"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>